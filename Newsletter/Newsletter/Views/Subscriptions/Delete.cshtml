@model Newsletter.Models.SubscriptionViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Unsubscribe</h2>
<p>Are you sure you want to unsubscribe @Model.Name (@Model.Email) from the @Model.Interval newsletter?</p>

@using (Html.BeginForm("Delete", "Subscriptions", FormMethod.Post, new { id = @Model.ID }))
{
    @Html.HiddenFor(s => s.ID);
    <input type="submit" value="Yes" name="value" />
    <input type="submit" value="No" name="value" />
}
